                android:layout_height="157dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="27dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anode1" />

