                    android:id="@+id/tvnama1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/imageView1"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:text="Begin"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvdesc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tvnama1"
                    android:layout_toEndOf="@id/imageView1"
                    android:gravity="clip_horizontal"
                    android:text="Album FTS versi ini memiliki konsep yang mana ekspresi dan gaya berpakaian semuanya dikontrol"
                    android:textSize="14sp"
                    android:fontFamily="@font/acme"/>

                <TextView
                    android:id="@+id/tvharga1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvdesc1"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/imageView1"
                    android:fontFamily="@font/anton"
                    android:text="Rp 375.000"
                    android:textSize="18sp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

