<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAlbumFTS">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="157dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fts1" />

            <TextView
                android:id="@+id/tvnama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView1"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="ep.1 Control"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvdesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvnama1"
                android:layout_toEndOf="@id/imageView1"
                android:gravity="clip_horizontal"
                android:text="Ep.1 nya adalah control, yang mana konsep pemotretannya seperti manekin dan sedang dikontrol oleh orang lain"
                android:textSize="14sp"
                android:fontFamily="@font/acme"/>

            <TextView
                android:id="@+id/tvharga1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdesc1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/imageView1"
                android:fontFamily="@font/anton"
                android:text="Rp 315.000"
                android:textSize="14sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="157dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fts2" />

            <TextView
                android:id="@+id/tvnama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView2"
                android:gravity="center"
                android:text="ep.2 Shadow"
                android:fontFamily="@font/alfa_slab_one"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvdesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnama2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView2"
                android:fontFamily="@font/acme"
                android:gravity="clip_horizontal"
                android:text="Ep.2 adalah shadow, konsep nya menampilkan keadaan member yang sedang dikontrol dan mencari jalan keluar dari ruangan tsb."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvharga2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdesc2"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/imageView2"
                android:text="Rp 315.000"
                android:textSize="15sp"
                android:fontFamily="@font/anton"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="157dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fts3" />

            <TextView
                android:id="@+id/tvnama3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView3"
                android:gravity="center"
                android:text="ep.3 Ray"
                android:fontFamily="@font/alfa_slab_one"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvdesc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnama3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imageView3"
                android:gravity="clip_horizontal"
                android:text="Ep.3 adalah ray, konsepnya mereka telah berhasil keluar dari ruang control dan sedang mencari arti kebebasan."
                android:textSize="14sp"
                android:fontFamily="@font/acme"/>

            <TextView
                android:id="@+id/tvharga3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdesc3"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageView3"
                android:text="Rp 415.000"
                android:textSize="14sp"
                android:fontFamily="@font/anton"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="157dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fts4" />

            <TextView
                android:id="@+id/tvnama4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView4"
                android:gravity="center"
                android:text="ep.4 Path"
                android:fontFamily="@font/alfa_slab_one"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvdesc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnama4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView4"
                android:gravity="clip_horizontal"
                android:text="Ep.4 adalah path, konsepnya mereka masih ngambang dengan arti kebebasan dan mencoba sekedar menikmati awal baru dari kebebasan."
                android:textSize="14sp"
                android:fontFamily="@font/acme" />

            <TextView
                android:id="@+id/tvharga4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdesc4"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageView4"
                android:text="Rp 485.000"
                android:textSize="18sp"
                android:fontFamily="@font/anton"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="157dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fts5" />

            <TextView
                android:id="@+id/tvnama5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView5"
                android:gravity="center"
                android:text="ep.5 Pioneer"
                android:fontFamily="@font/alfa_slab_one"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvdesc5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnama5"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView5"
                android:gravity="clip_horizontal"
                android:text="Ep.5 adalah pioneer, konsepnya mereka telah menemukan arti kebebasan sesungguhnya dan pergi kedunia baru."
                android:textSize="14sp"
                android:fontFamily="@font/acme"/>

            <TextView
                android:id="@+id/tvharga5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdesc5"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageView5"
                android:text="Rp 350.000"
                android:textSize="14sp"
                android:fontFamily="@font/anton"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


